<?xml version='1.0' encoding='utf-8'?>
<widget id="com.exodo.notas" version="2.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Notas</name>
    <description>
        Aplicativo de notas minimalista para quem gosta de simplicidade na hora de organizar suas anotações.
    </description>
    <author email="jaelsonjacinto@outlook.com" href="http://jaelsonjacinto.tk">
        Jaelson Jacinto de Araújo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
